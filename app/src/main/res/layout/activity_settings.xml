<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient4"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/relative_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient4">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="Settings"
            android:titleTextColor="#020202"
            android:layout_toRightOf="@+id/back"
            />
        <ImageButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/back2"
            android:layout_alignBottom="@+id/toolbar"
            android:onClick="back"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ababac"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:onClick="activate">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/activation_image"
            android:background="@mipmap/ic_contacts_black_24dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/activation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/activation_image"
            android:layout_marginBottom="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ababac"
            android:layout_below="@+id/activation"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:onClick="location">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/location_image"
            android:background="@mipmap/ic_room_black_24dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/location_image"
            android:layout_marginBottom="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ababac"
            android:layout_below="@+id/location"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:onClick="profile">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/profile_image"
            android:background="@mipmap/ic_account_circle_black_24dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginBottom="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ababac"
            android:layout_below="@+id/profile"/>

    </RelativeLayout>
<TextView
    android:layout_marginTop="160dp"
    android:layout_gravity="right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="theSnehaThing"
    android:textColor="#d5d5d6"/>
    </LinearLayout>