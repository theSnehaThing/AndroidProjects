<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/gradient4"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:id="@+id/r"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient4"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="WELCOME TO"
        android:textColor="#050505"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HelpAtHand"
        android:textColor="#050505"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@+id/tv1"/>


    <EditText
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"
        android:paddingLeft="10dp"
        android:id="@+id/etemail"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/tv2"/>
    <EditText
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:id="@+id/etpass"
        android:inputType="textPassword"
        android:layout_below="@+id/etemail"
        />

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etpass"
        >

        <TextView
            android:id="@+id/contacts1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28b103"
            android:text="1st Emergency Contact"
            />
        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/name1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:inputType="text"
            android:layout_below="@+id/contacts1"/>

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/number1"
            android:layout_below="@+id/name1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="number"
            android:hint="number"/>
        <Button
            android:layout_width="800dp"
            android:layout_height="100dp"
            android:text=""
            android:textSize="50dp"
            android:textColor="#28b103"
            android:background="@mipmap/con10"
            android:onClick="go_to_contact1"
            android:layout_toRightOf="@+id/name1"
            android:layout_toEndOf="@+id/name1" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1">
        <TextView
            android:id="@+id/contacts2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28b103"
            android:text="2nd Emergency Contact"/>
        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/name2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:inputType="text"
            android:layout_below="@+id/contacts2"/>

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/number2"
            android:layout_below="@+id/name2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="number"
            android:hint="number"/>
        <Button
            android:layout_width="800dp"
            android:layout_height="100dp"
            android:text=""
            android:textSize="50dp"
            android:textColor="#28b103"
            android:background="@mipmap/con10"
            android:onClick="go_to_contact2"
            android:layout_toEndOf="@+id/name2"
            android:layout_toRightOf="@+id/name2" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r3"
        android:layout_below="@+id/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/contacts3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28b103"
            android:text="2nd Emergency Contact"/>
        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/name3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:inputType="text"
            android:layout_below="@+id/contacts3"/>

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/number3"
            android:layout_below="@+id/name3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="number"
            android:hint="number"/>
        <Button
            android:layout_width="800dp"
            android:layout_height="100dp"
            android:text=""
            android:textSize="50dp"
            android:textColor="#28b103"
            android:background="@mipmap/con10"
            android:onClick="go_to_contact3"
            android:layout_toRightOf="@+id/name3"
            android:layout_toEndOf="@+id/name3" />

    </RelativeLayout>

    <Button
        android:layout_marginTop="6dp"
        android:layout_marginLeft="100dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="register"
        android:id="@+id/btnregister"
        android:background="@drawable/gradient4"
        android:layout_below="@+id/r3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to Login Page"
        android:id="@+id/tvlogin"
        android:layout_below="@+id/btnregister"
        android:textSize="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="150dp"/>
</RelativeLayout>

</ScrollView>