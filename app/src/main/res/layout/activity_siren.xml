<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient4">
    <RelativeLayout
        android:id="@+id/relative_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient4">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="Siren"
            android:titleTextColor="#050505"
            android:layout_toRightOf="@+id/back"
            />
        <ImageButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/back2"
            android:layout_alignBottom="@+id/toolbar"
            android:onClick="back"/>

    </RelativeLayout>


    <TextView
        android:layout_marginTop="70dp"
        android:text="Please press the to activate siren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/siren2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:text=""
        android:onClick="siren"
        android:background="@mipmap/siren2"
        android:layout_gravity="center"/>
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/stop1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text=""
        android:onClick="stop"
        android:background="@mipmap/stp"
        android:layout_gravity="center"/>
</LinearLayout>