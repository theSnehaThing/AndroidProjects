<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient4"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/relative_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient4">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="Update Emegency Contacts"
            android:titleTextColor="#050505"
            android:layout_toRightOf="@+id/back"
            />
        <ImageButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/back2"
            android:layout_alignBottom="@+id/toolbar"
            android:onClick="back"/>

    </RelativeLayout>


    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contacts1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28b103"
            android:text="1st Contact"/>
        <EditText
            android:id="@+id/name1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:inputType="text"
            android:layout_below="@+id/contacts1"/>

        <EditText
            android:id="@+id/number1"
            android:layout_below="@+id/name1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="number"
            android:hint="number"/>
        <Button
            android:layout_width="800dp"
            android:layout_height="100dp"
            android:text=""
            android:textSize="50dp"
            android:textColor="#28b103"
            android:background="@mipmap/con10"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/name1"
            android:onClick="go_to_contact1"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/contacts2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28b103"
            android:text="2nd Contact"/>
        <EditText
            android:id="@+id/name2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:inputType="text"
            android:layout_below="@+id/contacts2"/>

        <EditText
            android:id="@+id/number2"
            android:layout_below="@+id/name2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="number"
            android:hint="number"/>
        <Button
            android:layout_width="800dp"
            android:layout_height="100dp"
            android:text=""
            android:textSize="50dp"
            android:textColor="#28b103"
            android:background="@mipmap/con10"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/name2"
            android:onClick="go_to_contact2"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/contacts3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28b103"
            android:text="2nd Contact"/>
        <EditText
            android:id="@+id/name3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:inputType="text"
            android:layout_below="@+id/contacts3"/>

        <EditText
            android:id="@+id/number3"
            android:layout_below="@+id/name3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="number"
            android:hint="number"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text=""
            android:textSize="50dp"
            android:textColor="#28b103"
            android:background="@mipmap/con10"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/name3"
            android:onClick="go_to_contact3"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28b103"
            android:text="Emergency message"/>
        <EditText
            android:id="@+id/sostext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm in trouble...help!!!"
            android:inputType="text"
            android:layout_below="@+id/message"/>

    </RelativeLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save contacts"
        android:background="@drawable/gradient4"
        android:onClick="save"/>


    <TextView
        android:layout_gravity="right"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="theSnehaThing"
        android:textColor="#d5d5d6"/>

</LinearLayout>