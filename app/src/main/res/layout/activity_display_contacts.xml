<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient4"
    xmlns:android="http://schemas.android.com/apk/res/android">



<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient4"
    android:weightSum="1">
    <RelativeLayout
        android:id="@+id/relative_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient4">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="Emergency Contacts"
            android:titleTextColor="#060606"
            android:layout_toRightOf="@+id/back"
            />
        <ImageButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:background="@mipmap/back2"
            android:layout_alignBottom="@+id/toolbar"
            android:onClick="back"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.13">

        <TextView
            android:id="@+id/email1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28b103"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:text="Your Email"/>
        <TextView
            android:id="@+id/tvemail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="email"
            android:paddingLeft="7dp"
            android:layout_marginBottom="2dp"
            android:textSize="20dp"
            android:inputType="text"
            android:layout_below="@+id/email1"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#112233"/>

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.13">

        <TextView
            android:id="@+id/contacts1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28b103"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:text="1st Contact"/>
        <TextView
            android:id="@+id/name1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:paddingLeft="7dp"
            android:layout_marginBottom="2dp"
            android:textSize="20dp"
            android:inputType="text"
            android:layout_below="@+id/contacts1"/>

        <TextView
            android:id="@+id/number1"
            android:layout_below="@+id/name1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="7dp"
            android:inputType="number"
            android:layout_marginBottom="7dp"
            android:hint="number"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#112233"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.15">
        <TextView
            android:id="@+id/contacts2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28b103"
            android:layout_marginTop="2dp"
            android:text="2nd Contact"/>
        <TextView
            android:id="@+id/name2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:layout_marginTop="2dp"
            android:textSize="20dp"
            android:inputType="text"
            android:paddingLeft="7dp"

            android:layout_below="@+id/contacts2"/>

        <TextView
            android:id="@+id/number2"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="7dp"
            android:layout_below="@+id/name2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="7dp"
            android:inputType="number"
            android:hint="number"/>


    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#112233"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.20">
        <TextView
            android:id="@+id/contacts3"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28b103"
            android:paddingLeft="7dp"
            android:text="3rd Contact"/>
        <TextView
            android:id="@+id/name3"
            android:layout_marginTop="2dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:textSize="20dp"
            android:inputType="text"
            android:paddingLeft="7dp"
            android:layout_below="@+id/contacts3"/>

        <TextView
            android:id="@+id/number3"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="7dp"
            android:layout_below="@+id/name3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="7dp"
            android:inputType="number"
            android:hint="number"/>


    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#112233"/>

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.13">

        <TextView
            android:id="@+id/message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28b103"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:text="Your SOS Text"/>
        <TextView
            android:id="@+id/tvmsg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="message"
            android:paddingLeft="7dp"
            android:layout_marginBottom="2dp"
            android:textSize="20dp"
            android:inputType="text"
            android:layout_below="@+id/message1"/>

    </RelativeLayout>



    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
android:background="@drawable/gradient4"
        android:onClick="Update"/>

    <TextView
        android:layout_gravity="right"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="theSnehaThing"
        android:textColor="#d5d5d6"/>

</LinearLayout>
    </ScrollView>